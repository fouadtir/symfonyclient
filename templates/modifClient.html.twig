<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ajouter client!{% endblock %}</title>
        {% block stylesheets %}<meta charset="UTF-8">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <!-- Compiled and minified JavaScript -->
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <script src="https://use.fontawesome.com/66c12c9159.js"></script>
        {% endblock %}
    </head>

    <body>
        {% block body %}
        <nav>
            <div class="nav-wrapper grey darken-1">
                <a href="index.php" <i class="fa fa-home fa-4x" aria-hidden="true"></i></a>
            </div>
        </nav>
          {% for client in clients %}
          <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="row">
                            <form class="col s12" method="post" >
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="nom" name="nom" type="text" class="validate" value="{{ client.nom }}" >
                                        <label for="nom">Nom :</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="prenom" name="prenom" type="text" class="validate" value="{{ client.prenom }}">
                                        <label for="prenom">Pr√©nom :</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="email" name="email" type="email" class="validate" value="{{ client.email }}">
                                        <label for="email">Email :</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input name="dateNaissance" id="dateNaissance" type="text" class="validate" value="{{ client.dateNaissance.format('Y-m-d') }}">
                                        <label for="dateNaissance">Date de Naissance :</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <button class="btn waves-effect waves-light" type="submit" name="submit" value="{{ client.id }}">Valider</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        
          {% endfor %}


          {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
